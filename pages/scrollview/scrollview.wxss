/* pages/scrollview/scrollview.wxss */
.container-scrollview{
  padding: 15px;
}
.scroll-view-item {
  width: 100%;
  height:100px;
}
.scroll-view-y{height: 200px;}
.bc-green {background-color: green;}
.bc-red {background-color: red;}
.bc-yellow {background-color: yellow;}
.bc-blue {background-color: blue;}
.scroll-view-h {
  width: 500px;
  height: 50px;
  display: flex;
  flex-direction: row;
  white-space: nowrap; 
}
.scroll-view-item-h { 
  width: 800px;
  height:40px;
  display: inline-block; 
}
.scroll-header {
  display: flex;
  white-space: nowrap;
  margin-top: 10px; 
}
.scroll-header view {
  height:128rpx;
  width:500rpx;
  border:1px solid red;
  display: inline-block; 
}