/* pages/page/jiugonggeNav/jiugonggeNav.wxss */
@import "../../../css/iconfont.wxss";
@font-face {
  font-family: 'iconfont';  /* project id 807040 */
  src: url('//at.alicdn.com/t/font_807040_kwgsc5robo.eot');
  src: url('//at.alicdn.com/t/font_807040_kwgsc5robo.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_807040_kwgsc5robo.woff') format('woff'),
  url('//at.alicdn.com/t/font_807040_kwgsc5robo.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_807040_kwgsc5robo.svg#iconfont') format('svg');
