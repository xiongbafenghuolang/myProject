<!--pages/login/login.wxml-->
<view class="mcontainer">
  <view class="item">
    <image class="image" src="../../image/logo.png" />
  </view>
  <view class="item">
    <view class="login-item">
      <view class="login-item-info">用户名</view>
      <view><input bindinput="usernameInput"    /></view>
    </view>
    <view class="login-item">
      <view class="login-item-info">密码</view>
      <view class="login-pwd">
        <input bindinput="passwordInput"  style="flex-grow:1" password="true" />
        <text>忘记密码</text>
      </view>
    </view>
    <view class="login-item bottom">
      <button type="primary" class="login-btn" bindtap="loginBtnClick">登录</button>
    </view>

    <view class="item bottom-info">
      <view>没有用户?<text>注册</text></view>
      <view class="wechat-icon">
        <image src="/image/wechat.png"/>
      </view>
    </view>

  </view>


</view>
