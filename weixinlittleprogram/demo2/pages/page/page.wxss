/* pages/page/page.wxss */
.content-list {
  padding: 20rpx 0;
}
.list-item {
  width: 100%;
  min-height: 100rpx;
  border-bottom:1px solid #dcdcdc;
  display: flex;
  padding: 15rpx 20rpx;
  flex-direction: row;
}
.list-left {
  width: 100rpx;
  height: 100rpx;
}
.list-right {
  display: flex;
  flex-direction: row;
  width: 588rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border:1px solid red;
}
.title {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.time {
  width: 200px;
}
.bg{
  width: 100%;
  width: 150rpx;
  background-color: #d53e37;
}
.hr{
  width: 100%;
  height: 15rpx;
}
.item{
  display: flex;
  flex-direction: row;
}
.order{
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 15px;
}
.detail{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888888;
}
.xian{
  border: 1px solid #cccccc;
  opacity: 0.2;
}

.bottom-textarea {
  width: 750rpx;
  height: 60rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border: 1px solid #f00;
}
.bottom-textarea textarea {
  width: 100%;
}