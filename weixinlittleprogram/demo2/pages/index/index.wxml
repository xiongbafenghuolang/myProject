<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="action">
    <navigator url="../form/form">form表单提交</navigator>
  </view>
  <view class="page">
    <navigator url="../tab/tab">tab</navigator>
  </view>
  <view class="form-btn">
    <button  type="primary" bindtap="goForm">form </button>
  </view>
   <view class="action">
    <navigator url="../action/action">action</navigator>
  </view>
  <view class="page">
    <navigator url="../page/page">page</navigator>
  </view>
  <view class="page">
    <navigator url="../wxml/wxml">wxml</navigator>
  </view>
  <view class="page">
    <button type="primary" bindtap="showModal" >弹窗</button>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>

<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <radio-group>
    <view>
      <label>
        <text>微信支付</text><radio checked='checked' value='微信支付'></radio>
      </label>
    </view>
    <view>
      <label>
        <text>支付宝支付</text><radio value='支付宝支付'></radio>
      </label>
    </view>
  </radio-group>
</view>
